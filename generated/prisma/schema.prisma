// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Event management
model event_items {
  id                String   @id @default(uuid())
  title             String
  date              String
  image             String
  category          String
  description       String
  price             String?
  registration_link String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("event_items")
}

// Booking requests
model booking_requests {
  id              String   @id @default(uuid())
  eventType       String
  customEventType String?
  date            String
  guests          Int
  name            String
  email           String
  phone           String
  notes           String?
  status          String   @default("pending") // 'pending' | 'confirmed' | 'archived'
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("booking_requests")
}

// Contact messages
model contact_messages {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  date      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_messages")
}

model admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin")
}
